#!/bin/bash
set -e

echo "Uploading training data..."
rclone copy data/training chi_tacc:$RCLONE_CONTAINER/processed/training --progress

echo "Uploading validation data..."
rclone copy data/validation chi_tacc:$RCLONE_CONTAINER/processed/validation --progress

echo "Uploading production data..."
rclone copy data/production chi_tacc:$RCLONE_CONTAINER/processed/production --progress
